<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#1a1a1a"
    tools:ignore="ExtraText"> <!-- Fondo oscuro estilo synthwave -->

    <!-- Título de Sign Up -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF00FF" <!-- Color neón rosa -->
    android:layout_marginBottom="24dp"
    android:fontFamily="sans-serif-medium" />

    <!-- Label y Campo de texto para el nombre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:inputType="textPersonName"
        android:backgroundTint="#FF00FF"
        android:hintTextColor="#FF80FF"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Label y Campo de texto para el correo electrónico -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu correo"
        android:inputType="textEmailAddress"
        android:backgroundTint="#FF00FF"
        android:hintTextColor="#FF80FF"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Label y Campo de texto para la contraseña -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:backgroundTint="#FF00FF"
        android:hintTextColor="#FF80FF"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Label y Campo de texto para confirmar la contraseña -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Contraseña"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repite tu contraseña"
        android:inputType="textPassword"
        android:backgroundTint="#FF00FF"
        android:hintTextColor="#FF80FF"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Botón de Registrarse -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFF"
        android:padding="12dp"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
