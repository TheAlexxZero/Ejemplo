<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#2A0A3A">

    <TextView
        android:id="@+id/textViewHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hábito"
        android:textColor="#BB86FC"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewTimeToSleep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora de Dormir"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewHabitName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewTimeToWake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora de Despertar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewTimeToSleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewFrequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Frecuencia"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewTimeToWake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo de Hábito"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewFrequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSpecificType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo Específico"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewTerm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Plazo"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textViewSpecificType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
