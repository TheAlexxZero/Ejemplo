<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#1A1A2E">

    <TextView
        android:id="@+id/tituloEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Hábito"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#BB86FC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editarNombreHabito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Hábito"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BB86FC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tituloEditar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editarHoraDormir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hora de Dormir"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BB86FC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editarNombreHabito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editarHoraDespertar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hora de Despertar"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BB86FC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editarHoraDormir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editarFrecuenciaHabito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Frecuencia"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BB86FC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editarHoraDespertar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editarTipoEspecifico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Especifica tu Hábito"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BB86FC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/editarFrecuenciaHabito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/botonGuardarCambios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:backgroundTint="#6200EE"
        android:padding="14dp"
        android:text="Guardar Cambios"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editarTipoEspecifico" />

</androidx.constraintlayout.widget.ConstraintLayout>
