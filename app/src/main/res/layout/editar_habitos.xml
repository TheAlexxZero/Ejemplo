<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:padding="24dp">

    <TextView
        android:id="@+id/tituloEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar H치bito de Sue침o"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#BB86FC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editarNombreHabito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del H치bito"
        android:textColor="#FFFFFF"
        android:hintTextColor="#BB86FC"
        android:backgroundTint="#BB86FC"
        app:layout_constraintTop_toBottomOf="@id/tituloEditar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editarHoraDormir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hora de Dormir"
        android:textColor="#FFFFFF"
        android:hintTextColor="#BB86FC"
        android:backgroundTint="#BB86FC"
        app:layout_constraintTop_toBottomOf="@id/editarNombreHabito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editarHoraDespertar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hora de Despertar"
        android:textColor="#FFFFFF"
        android:hintTextColor="#BB86FC"
        android:backgroundTint="#BB86FC"
        app:layout_constraintTop_toBottomOf="@id/editarHoraDormir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editarFrecuenciaHabito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Frecuencia"
        android:textColor="#FFFFFF"
        android:hintTextColor="#BB86FC"
        android:backgroundTint="#BB86FC"
        app:layout_constraintTop_toBottomOf="@id/editarHoraDespertar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editarTipoEspecifico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Especifica tu H치bito"
        android:textColor="#FFFFFF"
        android:hintTextColor="#BB86FC"
        android:backgroundTint="#BB86FC"
        app:layout_constraintTop_toBottomOf="@id/editarFrecuenciaHabito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/spinnerTipoHabito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editarTipoEspecifico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupPlazo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipoHabito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioCortoPlazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corto Plazo"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioLargoPlazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Largo Plazo"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/botonGuardarCambios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        app:layout_constraintTop_toBottomOf="@id/radioGroupPlazo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
